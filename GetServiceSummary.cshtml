                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.AbuserServices)
                        {

                            <tr class="">
                                <td>@Html.DisplayFor(modelItem => item.LastName) , @Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td class="">
                                    @foreach (var service in item.Services)
