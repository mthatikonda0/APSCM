</style>
<script>
    $(document).ready(function () {
        $('#printservicesummary').on('click', function () {


            var template = $('#servicesummarydiv').clone();
            //$.each(template.find('input'), function () {
            //    $(this).prop("disabled", false)
            //});
            $.each(template.find('table'), function () {
                $(this).css("width", "100%")
                $(this).css("text-align", "left")
                $(this).css("border", "1px solid black")
            });

            template.find(".heading").show();
            template.find('.noprint').remove();
            Print(template);
        });
        $('.heading').hide();
    });
    function Print(template) {
        var w = window.open("", "popupWindow", "width=600, height=400, scrollbars=yes");
        var html = template.html();

        $(w.document.body).html(html);
        w.print();
    }
</script>

