        <h2 style="text-align: center"> Illinois Department on Aging APS</h2>

        <h3 style="text-align: center"> Service Summary</h3>
    </div>
    <div class="row nextline"></div>
    <div class="container" style="border:groove">
        <h3 style="text-align:center">Client Services</h3>
        <div class="col-lg-4">
            <h4>At Start</h4>
            @if (Model.ServicesAtStart != null && Model.ServicesAtStart.Any())
            {
                <table class="table table-striped table-hover ">
                    <caption style="display: none">Services At Start</caption>
                    <thead>
                        <tr>
                            <th class="col-md-1">Services</th>
                            <th class="col-md-1">Agency</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.ServicesAtStart)
                        {

                            <tr class="">
                                <td>@Html.DisplayFor(modelItem => item.ServiceTypeDescription)</td>
                                <td>@Html.DisplayFor(modelItem => item.AgencyName)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div class="col-lg-4">
            <h4>Referred By APS</h4>
            @if (Model.ServicesReferredByAPS != null && Model.ServicesReferredByAPS.Any())
            {
                <table class="table table-striped table-hover ">
                    <caption style="display: none">Services Referred by APS</caption>
                    <thead>
                        <tr>
                            <th class="col-md-1">Services</th>
                            <th class="col-md-1">Agency</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.ServicesReferredByAPS)
                        {

                            <tr class="">
                                <td>@Html.DisplayFor(modelItem => item.ServiceTypeDescription)</td>
                                <td>@Html.DisplayFor(modelItem => item.AgencyName)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div class="col-lg-4">
            <h4>At Closure</h4>
            @if (Model.ServicesAtClosure != null && Model.ServicesAtClosure.Any())
            {
                <table class="table table-striped table-hover ">
                    <caption style="display: none">Services At Closure</caption>
                    <thead>
                        <tr>
                            <th class="col-md-1">Services</th>
                            @* <th class="col-md-1">Agency</th>    *@
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.ServicesAtClosure)
                        {

                            <tr class="">
                                <td>@Html.DisplayFor(modelItem => item.ServiceTypeDescription)</td>
                                @*   <td>@Html.DisplayFor(modelItem => item.AgencyName)</td>   *@
                            </tr>
                        }
