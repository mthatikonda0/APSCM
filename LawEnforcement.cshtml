                                            @Html.LabelFor(model => model.DateReferred, new { @class = "control-label" })

                                            @Html.TextBoxFor(model => model.DateReferred, "{0:MM/dd/yyyy}", new { @class = "form-control  datepicker", placeholder = "Date Referred" })

