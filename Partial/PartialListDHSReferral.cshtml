@model AGE.CMS.Data.Models.Intake.viewClientCMS



<div class="container">  
 
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Person.FirstName)
    @Html.HiddenFor(model => model.Person.LastName)
    @Html.HiddenFor(model => model.Person.DOB)
    @Html.HiddenFor(m => m.DateCreated)
    <p>
       
        <a href="@Url.Action("EditReferrals", "Case", new { Id = Model.Id, referralId = 0  , CaseheaderId = Model.CaseheaderId })">
            <button id="newReferral" class="btn btn-success create" type="button">
                <span class="glyphicon glyphicon-plus"></span><span style="margin-left: 5px;">
                    <text>New DHS Referral</text>
                </span>
            </button>
        </a>
    </p>
 
       <div class="nextline">
        @if (Model.ListOfDHSReferrals != null && Model.ListOfDHSReferrals.Any())
        {
            <table class="table table-striped table-hover ">
                <caption style="display: none">List of Intakes</caption>
                <thead>
                    <tr>
                        <th class="col-md-1">&nbsp;</th>
                        <th class="col-md-1">DHS ReferralId</th>
                        <th class="col-md-1">Agency Contact Person</th>
                        <th class="col-md-1">Date Created</th>
                        <th class="col-md-1">Date Updated</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.ListOfDHSReferrals)
                    {

                        <tr class="">
                            <td>

                                <div class="btn-group">
                                    @*<a rel="tooltip" class="btn btn-default btn-sm" title="Edit Intake " href='@Url.Action("EditIntake","Intake" , new { ClientId = Model.Id, Id = item.Id, mode = "case"})'><span class="glyphicon glyphicon-edit"></span></a>*@
                                    <a rel="tooltip" class="btn btn-default btn-sm" title="Edit DHS Referral " href='@Url.Action("EditReferrals" ,"Case", new {  Id = item.ClientId, CaseheaderId = Model.CaseheaderId, referralId  = item.Id})'><span class="glyphicon glyphicon-edit"></span></a>
                                   
                                </div>

                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.NameAgencyContactPerson)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateUpdated)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        
    </div>




</div>