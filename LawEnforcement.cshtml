                                                        <th class="col-md-1">Abuser Name</th>
                                                        <th class="col-md-1">Age</th>
                                                        <th class="col-md-1">Gender</th>
                                                        <th class="col-md-1">Relationship</th>

                                                    </tr>
                                                </thead>
